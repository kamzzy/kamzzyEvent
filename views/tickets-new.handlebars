<div class="row mt-4">
    <div class="col-lg-6 offset-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="card-title" style="text-align: center;">
                    <h3>New Ticket</h3>
                    <div class="lead">
                        Event: {{event.title}}
                    </div>
                </div>
                <div class="card-text">
                    <form action="/events/{{event.id}}/tickets" method="post">
                        <div class="form-group">
                            <label for="title">Name</label>
                            <input name="name" class="form-control" placeholder="Your name" />
                        </div>
                        <div class="form-group">
                            <label for="title">Email</label>
                            <input name="email" class="form-control" placeholder="Your valid email" />
                        </div>
                        <div class="text-right" style="margin:2%">
                            <a href="/" class='text-muted mr-2'>Cancel</a>
                            <button type="submit" class="btn btn-primary" style="float:right;" name="button">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>